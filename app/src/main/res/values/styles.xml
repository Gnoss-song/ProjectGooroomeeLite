<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Gooroomeelite" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/skyBlue</item>
        <item name="android:colorEdgeEffect">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/divide2</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#D8D8D8</item>
        <item name="colorControlNormal">#EEEEEE</item>
        <item name="android:editTextColor">#444444</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="EditTextSelectHandle">
        <item name="android:textSelectHandle" >@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/splashcolor</item>
        <item name="titleTextColor">@color/transparent</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">bold</item>
    </style>

</resources>
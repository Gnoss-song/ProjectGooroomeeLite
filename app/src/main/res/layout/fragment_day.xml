                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/share_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="#449EF6"
                    android:drawableStart="@drawable/ic_share_btn_image"
                    android:drawablePadding="8dp"
                    android:paddingLeft="74dp"
                    android:paddingRight="74dp"
                    android:gravity="left|center"
                    android:text="나의 공부 기록 공유하기"
                    android:background="@drawable/background_share_btn">
                </androidx.appcompat.widget.AppCompatButton>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 공부 타입"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/type_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    />
